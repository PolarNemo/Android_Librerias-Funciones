<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item
            android:state_pressed="true">
            <shape>

                <solid
                    android:color="@color/blue"/>
                <corners
                    android:radius="4dp"/>
            </shape>
        </item>

        <item>
            <shape>
                <stroke
                    android:width="@dimen/PaddingHorizontalAlmostNothing"
                    android:color="@color/whiteTras">
                </stroke>
                <solid
                    android:color="@color/blueTras"/>
                <corners
                    android:radius="4dp"/>
            </shape>
        </item>
</selector>